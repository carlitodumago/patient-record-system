# =====================================================
# Barangay Baan KM-3 Health Information System
# Environment Configuration
# =====================================================

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Gmail Configuration (for notifications)
GMAIL_USER=baankm3.health@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# SMS Gateway Configuration (optional)
SMS_GATEWAY_URL=http://your-android-phone:8080/send
# Alternative: Email-to-SMS carrier gateway
EMAIL_TO_SMS_CARRIER=vtext.com

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
BCRYPT_SALT_ROUNDS=10

# File Upload Configuration (if needed)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Backup Configuration (if needed)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30